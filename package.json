{
  "name": "angular-pwa-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "npm run lint:ts && npm run lint:scss",
    "lint:ts": "eslint . --ext .ts,.html",
    "lint:scss": "stylelint \"src/**/*.scss\"",
    "lint:fix": "npm run lint:ts:fix && npm run lint:scss:fix",
    "lint:ts:fix": "eslint . --ext .ts,.html --fix",
    "lint:scss:fix": "stylelint \"src/**/*.scss\" --fix",
    "prebuild": "npm run lint"
  },
  "dependencies": {
    "@angular/animations": "^18.2.13",
    "@angular/common": "^18.2.13",
    "@angular/compiler": "^18.2.13",
    "@angular/core": "^18.2.13",
    "@angular/forms": "^18.2.13",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.2.13",
    "@angular/router": "^18.2.13",
    "@angular/service-worker": "^18.2.13",
    "rxjs": "~7.8.1",
    "tslib": "^2.4.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.19",
    "@angular/cli": "^18.2.19",
    "@angular/compiler-cli": "^18.2.13",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-scss": "^5.1.0",
    "typescript": "~5.4.5"
  },
  "description": "An Angular Progressive Web App",
  "keywords": [
    "angular",
    "pwa"
  ],
  "license": "MIT"
}
