{
  "name": "angular-pwa-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:client": "ng serve --proxy-config proxy.conf.json --host localhost --port 4200 --live-reload --poll 2000",
    "start:server": "cd server && npm run start:dev",
    "start:client-only": "ng serve --proxy-config proxy.conf.json --host localhost --port 4200 --live-reload --poll 2000",
    "start:server-only": "cd server && npm run start:dev",
    "start:no-live-reload": "concurrently \"npm run start:server\" \"ng serve --live-reload=false\"",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:server": "cd server && npm run build",
    "build:all": "npm run build:server && npm run build:prod",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:server": "cd server && npm test",
    "test:all": "npm run test:headless && npm run test:server",
    "test:headless": "ng test --watch=false --browsers=ChromeHeadless",
    "lint": "ng lint",
    "lint:server": "cd server && npm run lint",
    "lint:all": "npm run lint && npm run lint:server",
    "e2e": "ng e2e",
    "install:server": "cd server && npm install",
    "install:all": "npm install && npm run install:server",
    "dev": "npm start",
    "serve:ssr:angular-pwa-app": "node dist/angular-pwa-app/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/cdk": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/material": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@angular/service-worker": "^17.0.0",
    "rxjs": "~7.8.0",
    "socket.io-client": "^4.7.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@types/node": "^18.18.0",
    "concurrently": "^8.2.0",
    "typescript": "~5.2.0"
  }
}
